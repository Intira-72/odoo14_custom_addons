<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="open_import_wiz_form" model="ir.ui.view">
            <field name="name">open.import.wiz.form</field>
            <field name="model">makro_orders.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="file_name" invisible="1"/>
                        <field name="file_data" filename="file_name" widget="binary" required="1" class="oe_inline" />
                    </group>                     
                    <footer>
                        <button string="Import" type="object" class="btn btn-primary" name="action_import_orders" />
                        <button string="Cancel" special="cancel" />
                    </footer>
                </form>                
            </field>            
        </record>
    </data>
</odoo>