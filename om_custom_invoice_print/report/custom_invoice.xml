<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_invoices_template">
        <!-- <link href="https://fonts.googleapis.com/css?family=Kanit+Regular" rel="stylesheet"/> -->
        <link href="styles.css" rel="stylesheet"/>
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">  
                <t t-call="web.internal_layout">         
                    <div class="page" style="font-family: 'Angsana New'; font-size: 24px;">                        
                        <div>
                            <div class="row">
                                <div class="col-1"></div>
                                <div class="col-6">
                                    <span t-field="o.partner_id.street"/><br/>
                                </div>
                                <div class="col-2"></div>
                                <div class="col-3">
                                    <span t-field="o.custom_name"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-1"></div>
                                <div class="col-6">
                                    <span t-field="o.partner_id.street2"/>
                                </div>
                                <div class="col-2"></div>
                                <div class="col-3">
                                    <span t-field="o.invoice_date"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-1"></div>
                                <div class="col-6">
                                    <span t-field="o.partner_id.city"/>
                                    <span t-field="o.partner_id.state_id.name"/>
                                    <span t-field="o.partner_id.zip"/>
                                </div>
                                <div class="col-2"></div>
                                <div class="col-3">
                                    <t t-set="payment_term" t-value="o.invoice_payment_term_id.name" />
                                    <span t-esc="'-' if payment_term == False else payment_term.replace('Days', '')"/>
                                    <span style="padding-left: 100px;" t-field="o.invoice_date_due"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-2"></div>
                                <div class="col-5">
                                    <span t-field="o.partner_id.vat"/>
                                </div>
                                <div class="col-2"></div>
                                <div class="col-3">
                                    <span t-field="o.ref"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-1"></div>
                                <div class="col-6">
                                    <span t-field="o.narration"/>
                                </div>
                                <div class="col-2"></div>
                                <div class="col-3">
                                    <span t-esc="some_code"/>
                                </div>
                            </div>
                        </div>
                           
                        <div style="margin-top: 120px;">
                            <t t-foreach="inv_move_line" t-as="inv">
                                <div class="row">
                                    <div class="col-2">
                                        <span t-esc="inv['p_code']"/>
                                    </div>
                                    <div class="col-4">
                                        <span t-esc="inv['p_name']"/>
                                    </div>
                                    <div class="col-1" style="text-align: right;">
                                        <span t-esc="inv['quantity']"/>
                                    </div>
                                    <div class="col-2" style="text-align: right;">
                                        <span t-esc="inv['price_unit']"/>
                                    </div>
                                    <div class="col-1">                                            
                                    </div>
                                    <div class="col-2" style="text-align: right;">
                                        <span t-esc="inv['price_subtotal']"/>
                                    </div>
                                </div>
                            </t>
                        </div>  

                        <div style="width: 95%; position:absolute; top:780px; page-break-inside: avoid; right:20px;">
                            <div class="row">
                                <div class="col-10"></div>
                                <div class="col-2" style="text-align: right;">
                                    <t t-esc="'{0:,.2f}'.format(o.amount_untaxed)" />
                                </div> 
                            </div>
                            <div class="row">
                                <div class="col-10" style="text-align: center;">
                                    <span t-esc="amout_bahttext"/>
                                </div>
                                <div class="col-2" style="text-align: right;">
                                    <t t-esc="'{0:,.2f}'.format(o.amount_tax)" />
                                </div> 
                            </div>
                            <div class="row">
                                <div class="col-10"></div>
                                <div class="col-2" style="text-align: right;">
                                    <t t-esc="'{0:,.2f}'.format(o.amount_total)" />
                                </div> 
                            </div>
                            <div class="row" style="margin-top: 70px;">
                                <div class="col-9"></div>
                                <div class="col-3">
                                    <h2><span t-esc="o.env.user.name"/></h2>
                                </div>                           
                            </div>                                                     
                        </div>                       
                    </div>
                </t>
            </t>                  
        </t>
    </template>   
</odoo>
