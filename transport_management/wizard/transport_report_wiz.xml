<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="transport_report_wiz_form" model="ir.ui.view">
            <field name="name">transport.report.wiz.form</field>
            <field name="model">transport.report.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="employee_id" options="{'no_create': True, 'no_create_edit':True}" /> 
                            <field name="operation_type" />      
                        </group>
                        <group>
                            <field name="start_date" />
                            <field name="end_date" />
                        </group>
                    </group>
                    <footer>
                        <button string="PDF Report" type="object" class="btn btn-primary" name="report" />
                        <button string="Cancel" special="cancel" />
                    </footer>
                </form>                
            </field>
        </record>
    </data>
</odoo>
