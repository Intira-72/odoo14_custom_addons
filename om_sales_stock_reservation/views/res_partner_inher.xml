<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_partner_form_inher">
            <field name="name">view.partner.form.inher</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales_purchases']/group" position="inside">
                    <group name="container_row_reser" groups="base.group_no_one" priority="7" attrs="{'invisible': [('type', '!=', 'contact')]}">
                        <group string="Reservation" name="reservation_location" colspan="2">
                            <field name="reservation_stock_partner" />
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>