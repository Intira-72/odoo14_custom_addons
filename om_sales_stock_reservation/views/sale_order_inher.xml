<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="sale_order_form_inher">
            <field name="name">sale.order.form.inher</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <field name="reservation_state" invisible="1"/>
                    <button name="action_selected_location" string="Use Reservation" class="btn-primary" type="object" attrs="{'invisible': ['|', ('state', 'not in', ['draft']), ('reservation_state', '=', True)]}"/>
                    <button name="action_selected_location" string="Use Location" type="object" attrs="{'invisible': ['|', ('state', 'not in', ['draft']), ('reservation_state', '=', False)]}"/>
                </xpath>                
            </field>
        </record>
    </data>
</odoo>